<h1>Scrapper</h1>
<h2>Welcome to Scrappy Scrapper</h2>
<div id="wrapper">
    <h1>Note Scraper</h1>
    <div id="articles">
        {{#each articles}}
            <div class="article" data-id={{_id}}>
                <p>{{title}}</p>
                <p>{{summary}}</p>
                <p>{{link}}</p>
                <button type="button" class="btn btn-danger unsave">
                    Unsave
                </button>
                <button type="button" class="btn btn-primary showcomment" data-toggle="modal" data-target="#comments">
                    Comments
                </button>
            </div>
        {{/each}}
        
    </div>
    <div class="modal fade" id="comments" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="notes"></div>
                <div id="invComment"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id='savenote'>Submit Comment</button>
            </div>
            </div>
        </div>
    </div>
    {{!-- <div id="notes"></div> --}}
</div>