<div class="titleBox d-flex align-items-center">
    <h1 class="boxTitle">Saved Articles</h1>
</div>
<div id="wrapper">
    <div id="articles">
        {{#each articles}}
            <div class="article" data-id={{_id}}>
                {{!-- <p>{{title}}</p>
                <p>{{summary}}</p>
                <p>{{link}}</p>
                <button type="button" class="btn btn-danger unsave">
                    Unsave
                </button>
                <button type="button" class="btn btn-primary showcomment" data-toggle="modal" data-target="#comments">
                    Comments
                </button> --}}

                <div class="card">
                    <div class="card-header">
                        <p class="float-left headline">{{title}}</p>
                        <button class="save btn btn-primary float-right" data-id={{_id}}>Save Article</button>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{summary}}</p>
                        <p class="card-title">{{link}}</p>
                        <button type="button" class="btn btn-danger unsave">
                            Unsave
                        </button>
                        <button type="button" class="btn btn-primary showcomment" data-toggle="modal" data-target="#comments">
                            Comments
                        </button>
                    </div>
                </div>
            </div>
        {{/each}}
        
    </div>
    <div class="modal fade" id="comments" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="notes"></div>
                <div id="invComment"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id='savenote'>Submit Comment</button>
            </div>
            </div>
        </div>
    </div>
    {{!-- <div id="notes"></div> --}}
</div>