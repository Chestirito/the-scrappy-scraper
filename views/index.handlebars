<script src="./javascripts/home.js"></script>

<div class="titleBox d-flex align-items-center">
    <h1 class="boxTitle">Welcome to Scrappy Scrapper</h1>
</div>

<div id="wrapper">
    <div class="card text-center">
        <div class="card-body">
            <button class="btn btn-primary scrape btn-lg btn-block" data-toggle="modal" data-target="#scraped">Scrape</button>
        </div>
    </div>
    <div id="articles">
        {{#each articles}}
            <div class="article my-2">
                {{!-- <p>{{title}}</p>
                <p>{{summary}}</p>
                <p>{{link}}</p>
                <button class="save btn btn-primary" data-id={{_id}}>Save Article</button> --}}

                <div class="card">
                    <div class="card-header">
                        <p class="float-left headline">{{title}}</p>
                        <button class="save btn btn-primary float-right" data-id={{_id}}>Save Article</button>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{summary}}</p>
                        <p class="card-title">{{link}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="modal fade" id="scraped" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Done Scraping</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="result"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id='reload'>Okay</button>
            </div>
            </div>
        </div>
    </div>
    {{!-- <div id="notes"></div> --}}
</div>
